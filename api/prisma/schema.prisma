generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Context {
  HOME
  WORK
  OUTSIDE
}

enum FeedbackType {
  DONE
  TOO_HARD
  NOT_RELEVANT
  RETRY
}

enum Plan {
  FREE
  PRO
}

enum EntitlementStatus {
  ACTIVE
  INACTIVE
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  goals       Goal[]
  constraints Constraint[]
  actions     Action[]
  feedbacks   Feedback[]
  entitlement Entitlement?
}

model Goal {
  id          String    @id @default(uuid())
  userId      String
  title       String
  description String
  priority    Int       // 1-5
  deadline    DateTime?
  createdAt   DateTime  @default(now())

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  actions Action[]

  @@index([userId])
}

model Constraint {
  id               String   @id @default(uuid())
  userId           String
  availableMinutes Int
  energy           Int      // 1-5
  context          Context
  createdAt        DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Action {
  id              String   @id @default(uuid())
  userId          String
  goalId          String?
  title           String
  whyThis         String
  steps           String[]
  timeMinutes     Int
  difficulty      Int      // 1-5
  successCriteria String
  fallbackIfStuck String
  modelUsed       String?
  rawJson         String?  @db.Text
  createdAt       DateTime @default(now())

  user     User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  goal     Goal?      @relation(fields: [goalId], references: [id])
  feedback Feedback[]

  @@index([userId])
  @@index([goalId])
}

model Feedback {
  id        String       @id @default(uuid())
  userId    String
  actionId  String
  type      FeedbackType
  note      String?
  createdAt DateTime     @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  action Action @relation(fields: [actionId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([actionId])
}

model Entitlement {
  id        String            @id @default(uuid())
  userId    String            @unique
  plan      Plan
  status    EntitlementStatus
  periodEnd        DateTime?
  usageCount       Int               @default(0)
  lastUsageDate    DateTime?
  createdAt        DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
